<NewCallScreen>
    name: "new_call"
    md_bg_color: self.theme_cls.backgroundColor

    MDTopAppBar:
        id: topbar
        type: "small"
        pos_hint: {'top': 1}

        MDTopAppBarLeadingButtonContainer:

            MDActionTopAppBarButton:
                icon: "arrow-left"
                on_release:
                    root.manager.push_replacement("home")

        MDTopAppBarTitle:
            text: "Select contact"

        MDTopAppBarTrailingButtonContainer:
            MDActionTopAppBarButton:
                icon: "magnify"

