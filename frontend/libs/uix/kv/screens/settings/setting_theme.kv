<ThemeScreen>
    name: "theme"
    md_bg_color: self.theme_cls.backgroundColor

    MDTopAppBar:
        id: appbar
        type: "small"
        pos_hint: {'top': 1}

        MDTopAppBarLeadingButtonContainer:

            MDActionTopAppBarButton:
                icon: "arrow-left"
                on_release:
                    root.manager.back()

        MDTopAppBarTitle:
            text: "eNtweniBookings"

